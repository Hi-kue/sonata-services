{
    "prettier.enable": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "always",
    },
    "eslint.rules.customizations": [
        {
            "rule": "style/*",
            "severity": "off",
            "fixable": true,
        },
        {
            "rule": "format/*",
            "severity": "off",
            "fixable": true,
        },
        {
            "rule": "*-indent",
            "severity": "off",
            "fixable": true,
        },
        {
            "rule": "*-spacing",
            "severity": "off",
            "fixable": true,
        },
        {
            "rule": "*-spaces",
            "severity": "off",
            "fixable": true,
        },
        {
            "rule": "*-order",
            "severity": "off",
            "fixable": true,
        },
        {
            "rule": "*-dangle",
            "severity": "error",
            "fixable": true,
        },
        {
            "rule": "*-newline",
            "severity": "error",
            "fixable": true,
        },
        {
            "rule": "*quotes",
            "severity": "error",
            "fixable": true,
        },
        {
            "rule": "*semi",
            "severity": "error",
            "fixable": true,
        },
    ],
    "eslint.validate": [
        "javascript",
        "typescript",
        "html",
        "markdown",
        "yaml",
        "toml",
        "xml",
        "svelte",
        "css",
        "less",
        "scss",
        "pcss",
        "postcss",
    ],
}
